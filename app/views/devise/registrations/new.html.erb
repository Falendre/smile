<div class="signup-wrapper">
  <h2 class="top-mese">新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'signup-form' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :名前 %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :年齢 %><br />
      <%= f.text_field :age %>
    </div>  

    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :パスワード確認 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :性別 %><br />
      <%= f.select :gender, [['男性'], ['女性']], prompt: '性別を選んでください' %>
    </div>
    
    <div class="field">
      <%= f.label :血液型 %><br />
      <%= f.select :blood_type, [['A', 'A'], ['B', 'B'], ['AB', 'AB'], ['O', 'O']], prompt: '血液型を選んでください' %>
    </div>

    <div class="field">
      <%= f.label :誕生日 %><br />
      <%= f.date_select :birth_day, start_year: Date.current.year - 100, end_year: Date.current.year %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>