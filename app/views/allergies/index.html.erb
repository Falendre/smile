<div class="main-contents">
  <aside>
    <div class="user-name"><p>ユーザー名さん</p></div>
    <h2 class="sub-title">menu</h2>
      <ul class="sub-menu">
        <li><a href="#">ワクチン</a></li>
        <li><%= link_to 'アレルギー', allergies_path %></li>
        <li><a href="#">既往歴</a></li>
        <li><a href="#">成長曲線</a></li>
      </ul>
    <div class="news"><h2>お知らせ</h2></div>
  </aside>
  <div class="main-area">
    <h2>アレルギー情報</h2>
    <%= form_with model: @allergies, url: allergies_path, method: :patch do |form| %>
      <div class="form-group">
        <%= form.label :kinds, "アレルギーの種類" %>
        <%= form.text_field :kinds, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :notes, "備考" %>
        <%= form.text_area :notes, class: "form-control" %>
      </div>
      <%= form.submit "保存", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>